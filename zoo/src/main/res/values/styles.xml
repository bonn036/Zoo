<resources>

    <style name="MyAppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:textSize">@dimen/text_size_80</item>
        <item name="android:textColor">@color/white_80_percent</item>
        <item name="android:fontFamily">"miui"</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyAppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="circle_progressbar_large">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:scaleType">center</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:background">@drawable/pic_refresh_bg</item>
    </style>

    <!-- Dialog中的短按钮样式 -->
    <style name="Dialog.Button.Primary" parent="@android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:background">@drawable/light_item_bg_selector</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>
